<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/layout_linear_vertical"
    android:layout_height="match_parent"
    android:background="@color/whiteColor">

    <TextView
        android:id="@+id/tv0"
        style="@style/btnMain"
        android:padding="@dimen/nSize10"
        android:text="设置标题" />

    <TextView
        android:id="@+id/tv1"
        style="@style/btnMain"
        android:padding="@dimen/nSize10"
        android:text="设置右上方文本" />


    <TextView
        android:id="@+id/tv2"
        style="@style/btnMain"
        android:padding="@dimen/nSize10"
        android:text="设置右上方图片" />

    <LinearLayout style="@style/layout_linear_horizontal">

        <TextView
            android:id="@+id/tv3"
            style="@style/txt_normal"
            android:padding="@dimen/nSize10"
            android:text="胜多负少的都是" />

        <ImageView
            style="@style/layout_allwarp"
            android:layout_margin="@dimen/nSize10"
            android:src="@mipmap/logo_lib_small_arrow_right_gray" />

    </LinearLayout>


</LinearLayout>
